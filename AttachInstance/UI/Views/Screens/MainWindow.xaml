<Window x:Class="AttachInstance.UI.Screens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttachInstance.UI.Screens"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="450"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI/Resources/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Button         
     Command="{Binding ConnectEtabsCommand}"        
     Grid.Row="1"
     Height="40" Width="150" Style="{StaticResource Primary_Button}">
            <DockPanel LastChildFill="True">
                <Image DockPanel.Dock="Left"
        Source="/UI/Resources/Icons/connect.png"
        Width="30" Height="30"
        Margin="0,0,8,0"/>
                <TextBlock Text="Connect Etabs"
            VerticalAlignment="Center"/>
            </DockPanel>
        </Button>

        <Button         
Command="{Binding GetStoryCommand}"        
Grid.Row="2"
Height="40" Width="150" Style="{StaticResource Primary_Button}">
            Get Etabs Stories Instance
        </Button>
    </Grid>
</Window>
