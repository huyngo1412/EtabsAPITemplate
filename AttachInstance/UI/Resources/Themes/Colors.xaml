<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="ButtonForeground" Color="White" />
    <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="#FFBFBFBF" />

    <SolidColorBrush x:Key="ButtonBackground" Color="#7A5CFF" />
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#FFD9D9D9" />

    <SolidColorBrush x:Key="ButtonMouseOverBackground" Color="#8F72FF" />
    <SolidColorBrush x:Key="ButtonMouseOverBorderBrush" Color="#7A5CFF" />

    <SolidColorBrush x:Key="ButtonPressedBackground" Color="#6947DB" />
    <SolidColorBrush x:Key="ButtonPressedBorderBrush" Color="#5737C7" />

    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#6A4BEE" />
    <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="#FFBDBDBD" />
</ResourceDictionary>